{
  "name": "The Loop - Media Slideshow PWA",
  "short_name": "The Loop",
  "description": "Progressive Web App สำหรับแสดงผลสื่อ (รูปภาพและวิดีโอ) แบบต่อเนื่องในรูปแบบสไลด์โชว์",
  "start_url": "./index.html",
  "display": "standalone",
  "orientation": "any",
  "theme_color": "#000000",
  "background_color": "#000000",
  "lang": "th",
  "scope": "./",
  "icons": [
    {
      "src": "icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "categories": ["entertainment", "multimedia", "utilities"],
  "screenshots": [
    {
      "src": "screenshot-wide.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide"
    },
    {
      "src": "screenshot-narrow.png",
      "sizes": "720x1280",
      "type": "image/png",
      "form_factor": "narrow"
    }
  ],
  "shortcuts": [
    {
      "name": "เริ่มสไลด์โชว์",
      "short_name": "เล่น",
      "description": "เริ่มเล่นสไลด์โชว์ทันที",
      "url": "./index.html?autoplay=true",
      "icons": [
        {
          "src": "icon-192x192.png",
          "sizes": "192x192"
        }
      ]
    }
  ],
  "prefer_related_applications": false,
  "file_handlers": [
    {
      "action": "./index.html",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".gif", ".webp", ".bmp"],
        "video/*": [".mp4", ".webm", ".ogg", ".avi", ".mov"]
      }
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  }
}

